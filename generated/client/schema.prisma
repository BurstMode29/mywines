datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

model Wine {
  id            Int      @id @default(autoincrement())
  name          String   @db.VarChar(50)
  year          Int
  type          String
  varietal      String
  rating        Float?
  consumed      Boolean?
  dateConsumed  DateTime?
  @@unique([id])
}

model User {
   id       Int     @id @default(autoincrement())
   email    String  @unique
   password String
}